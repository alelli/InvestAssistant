                <th>Потенциальный доход с одной бумаги</th>
                <th>Количество актива</th>
                <th>Покупка</th>
                <th>Продажа</th>
                <th>Потенциальный доход</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.BondsList)
            {
                <tr>
                    <td>@p.SecId</td>
                    <td>@p.LastPrice</td>
                    <td>@p.ForecastedPrice</td>
                    <td>@p.Income</td>
                    <td>@p.Amount</td>
                    <td>@p.Buy</td>
                    <td>@p.Sale</td>
                    <td>@p.TotalIncome</td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
}
</div>

<script>
    
    function sliderSize() {
      let shares = document.getElementById("shares");
      let bonds = document.getElementById("bonds");
      let slider = document.getElementById("slider");
      shares.value = 100 - slider.value;
      bonds.value = slider.value;
    }
</script>


