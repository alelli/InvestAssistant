@model RegisterViewModel
@{
    ViewData["Title"] = "Настройки";
}
<link rel="stylesheet" href="~/css/sign.css" asp-append-version="true"/>
<div align="center" width="100%">
    <form name="customer_data" method="POST">
        <table class="forma">
        <tr height="100">
            <td colspan="2">
            <h2>Редактировать данные</h2>
            </td>
        </tr>
        <tr>
            <td><h4>Почта:</h4></td>
            <td><input class="textBox" type="text" name="Login" value="@Model.Email"></td>
        </tr>
        <tr>
            <td><h4 class="textlabel">Имя:</h4></td>
            <td><input class="textBox" size="15" type="text" name="Name" value="@Model.Name">
            </td>
        </tr>
        <tr>
            <td><h4 class="textlabel">Старый пароль:</h4></td>
            <td> <input class="textBox" size="15" type="password" name="Password" value="@Model.CurrentPassword"></td>
        </tr>
        <tr>
            <td><h4 class="textlabel">Новый пароль:</h4></td>
            <td> <input class="textBox" size="15" type="password" name="Password" value="@Model.Password"></td>
        </tr>
        <tr>
            <td><h4 class="textlabel">Повтор пароля:</h4></td>
            <td><input class="textBox" size="15" type="password" name="PasswordConfirm" value="@Model.PasswordConfirm"></td>
        </tr>
        <tr>
            <td colspan="2" align="center">
            <button style="margin-top: 30px" class="catalog-button" type="submit" name="save_changes" value="save_changes">Сохранить изменения</button>
            </td>
        </tr>
        <tr>
            <td height="100" colspan="2"><a href="/Account/Logout" style="color: red">Выйти из аккаунта</a></td>
        </tr>
        <tr height="70">
            <td colspan="2"><center><font size="1" color="@ViewData["Color"]">@ViewData["Error"]</font></center></td>
        </tr>
        </table>
    </form>
</div>
